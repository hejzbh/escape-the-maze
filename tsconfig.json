{
  "compilerOptions": {
    "target": "ES6", // Verzija JavaScript-a na koju kompiliramo
    "module": "ES6", // Koristi ES6 modules
    "moduleResolution": "node", // Rešavanje modula kao u Node.js
    "rootDir": "./ts", // Gde se nalaze tvoji TypeScript fajlovi
    "outDir": "./_js", // Gde će biti smešteni generisani JavaScript fajlovi
    "esModuleInterop": true, // Omogućava kompatibilnost sa ES module-ima
    "strict": true // Aktivira striktni režim
  },
  "include": [
    "ts/**/*" // Uključi sve .ts fajlove iz ts foldera
  ],
  "exclude": [
    "node_modules" // Isključi 'node_modules' iz pretrage
  ]
}
